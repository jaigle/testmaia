@model DLMallas.Models.CertificadoViewModels
<link href="@Url.Content("~/Content/custom/malla.css")" rel="stylesheet">
<!-- Modal Vista Previa Certificado -->
    <div class="modal fade" id="myModal44" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class=" modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Vista Previa Certificado</h4>
                </div>
                <div class="modal-body">
                    <div class="certificado malla-curricular">
                        <div class="row">
                            <div class="col-sm-6" id="imgLogoCertificado"></div>
                            <div class="col-sm-6 text-right" id="imgImgCertificado"></div>
                        </div>
                        <h1>Certificado</h1>
                        <div class="cuerpo">
                            <div class="form-group">
                                <label class="control-label">Se otorga el presente certificado a </label>
                                <p class="form-control-static">>Nombre Colaborador<</p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">por haber completado la malla curricular,</label>
                                <p class="form-control-static">&gt;NombreMalla<</p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Con Fecha</label>
                                <p class="form-control-static">>Fecha<</p>
                            </div>
                            <div class="form-group">
                                <p class="form-control-static" id="imgImgFirma"></p>
                                <label class="control-label">Firma</label>
                            </div>
                        </div>
                        <!-- fin cuerpo certificado-->
                        <div class="listado-unidades-curriculares">
                            <label class="control-label help-block">A continuación se detalla el resultado del colaborador en cada una de las unidades curriculares cursadas.</label>
                            <!--datatable-->
                            <div class="tabla-resultados-no-registros-buscar">
                                <table id="tblResultados" class="table table-striped table-bordered table-hover tabla-resultados">
                                    <thead>
                                        <tr>
                                            <th class="no-sort">Unidad Curricular</th>
                                            <th class="no-sort">Evaluación</th>
                                            <th class="no-sort">Situación Final</th>
                                            <th class="no-sort">Fecha Expiración</th>
                                        </tr>
                                    </thead>
                                    <tbody id="listadoUnidades">
                                        @foreach (var item in @Model.ObtenerDetalleCertificado)
                                        {
                                            <tr role="row">
                                                <td>@Html.DisplayFor(modelItem => item.NombreUnidadCurricular)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Evaluacion)</td>
                                                <td>@Html.DisplayFor(modelItem => item.SituacionFinal)</td>
                                                <td>@Html.DisplayFor(modelItem => item.FechaExpiracion)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!--/datatable-->
                        </div>
                        <!-- fin listado-unidades-curriculares certificado-->
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnCerrarModal" type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>



