                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <select id="comboModalidad" class="form-control comboModalidad"></select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" id="cancelarModAgregarComponente" data-dismiss="modal">Cancelar</button>
                <button class="btn btn_primary" id="btnGuardarNuevoComponente">Guardar</button>
            </div>
        </div>
    </div>
</div>
