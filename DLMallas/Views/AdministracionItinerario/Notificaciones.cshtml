@model List<DLMallas.Business.Dto.Itinerario.DtoNotificacionItinerario>
@{
    ViewBag.Title = "Notificaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@Url.Content("~/Content/custom/itinerario.css")" rel="stylesheet">
<script src="~/Scripts/core/adminItinerario.js"></script>
<div class="main no-margin">
    @Html.Partial("~/Views/Shared/Partials/_SubMenuItinerario.cshtml", (string) ViewBag.IdItinerario)
    <input type="hidden" id="id_itinerario_hidden" value="@ViewBag.IdItinerario" />
    <div id="page-wrapper" class="col-sm-12 col-md-10">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default panel-page-content">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 pull-left text-left">
                                Configuracion de Notificaciones del Itinerario
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-condensed table-bordered table-hover" style="width: 100% !important;" id="tablaSelecionarMalla">
                            <thead>
                            <tr>
                                <th class="no-sort text-center" style="width: 10% !important;"></th>
                                <th style="width: 90% !important;">Notificaci&oacute;n</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in @Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        <input type="hidden" id="nombreNotificacion-@item.Id" value="@item.Nombre">
                                        @if (item.Seleccionado == 1)
                                        {
                                            <input type="checkbox" name="notificacionChk" class="select_notificacion" checked="checked" value="@item.Id" />
                                        }
                                        else
                                        {
                                            <input type="checkbox" name="notificacionChk" class="select_notificacion"  value="@item.Id" />
                                        }
                    
                                    </td>
                                    <td class="text-left">
                                        <div>
                                            @item.Nombre
                                        </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-4 no-padding-right pull-right margin-right10">
                                <a class="btn btn-primary btn-sm pull-right " href="#" id="btnGuardarNotificaciones">Guardar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
