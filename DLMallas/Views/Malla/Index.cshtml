@model DLMallas.Models.MallaViewModels
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/dataTables")
<script src="~/Scripts/plugins/Sesion/jquery.session.js"></script>
<script src="~/Scripts/jquery.json.js"></script>
<script src="~/Scripts/core/malla.js"></script>
<div class="main">
    <!--contenido central-->
    <!--Creador malla-->
    <div class="row container-buscador no-margin-left no-margin-right">
        <div class="col-sm-2 no-padding-right pull-right">
            <a class="btn btn-primary btn-sm pull-right " href="#" id="btnCrearMalla"><span class="fa fa-plus"></span> Crear Nuevo</a>
        </div>
    </div>

    <!--/.tabla-resultados-->
    <div class="panel panel-default panel-resultados-busqueda">
        <div class="panel-heading">Malla</div>
        <div class="panel-body">
            <!--datatable-->
            <div id="divListado">
                <div>
                    <table id="tblListado" class="table table-condensed table-bordered table-hover tabla-resultados">
                        <thead>
                        <tr>
                            <th class="no-sort"></th>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Escuela</th>
                            <th>Fecha Creación</th>
                            <th>Usuario Creación</th>
                            <th>Itinerarios</th>
                            <th>Itinerarios Activos</th>
                            <th>Estado</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in @Model.ObtenerListadoMalla)
                        {
                            <tr role="row">
                                <td>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 col-sm-4">
                                            <a href="@Url.Action("EditarMalla", new {id = item.Id})"><span class="glyphicon glyphicon-pencil"></span></a>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-4">
                                            <a href="#" onclick="eliminaMalla('@item.Id')"><span class="glyphicon glyphicon-remove"></span></a>
                                        </div>
                                    </div>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Escuela)</td>
                                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                                <td>@Html.DisplayFor(modelItem => item.UsuarioCreacion)</td>
                                <td>@Html.DisplayFor(modelItem => item.ItinerariosTotal)</td>
                                <td>@Html.DisplayFor(modelItem => item.ItinerariosActivos)</td>
                                <td>@(item.Activo == "1" ? "Activa" : "Inactiva")</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_CrearMalla", Model);
